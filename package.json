        "@types/react-dom": "16.9.3",
        "@types/sequelize": "^4.28.6",
        "@types/webpack": "4.1.4",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "babel-eslint": "10.0.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "8.0.6",
        "babel-plugin-named-asset-import": "^0.3.4",
        "babel-preset-react-app": "^9.0.2",
        "body-parser": "^1.19.0",
        "camelcase": "^5.2.0",
