        "compression": "^1.7.4",
        "cookie-parser": "^1.4.4",
        "css-loader": "2.1.1",
        "dotenv": "^6.2.0",
        "dotenv-expand": "5.1.0",
        "eslint": "^6.6.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-loader": "3.0.2",
        "eslint-plugin-flowtype": "3.13.0",
        "eslint-plugin-import": "2.18.2",
        "eslint-plugin-jsx-a11y": "6.2.3",
        "eslint-plugin-react-hooks": "^1.6.1",
        "express": "4.17.1",
        "express-flash": "0.0.2",
        "express-session": "^1.17.0",
