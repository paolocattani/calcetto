{
  "name": "server",
  "version": "1.0.0",
  "description": "api server",
  "main": "server.ts",
  "author": "Paolo Cattani",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "npm": "7.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paolocattani/calcetto"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prod:build": "tsc --pretty",
    "prod:heroku:server": "pm2-runtime start ecosystem.config.js --env production",
    "prod:heroku:server_opt": "./node_modules/.bin/ts-node server.ts --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "prod:ts": " ../node_modules/.bin/ts-node server.ts ",
    "dev": "./node_modules/.bin/nodemon --config \"./nodemon.json\"",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:unit:watch": "cross-env NODE_ENV=test jest -o --watch --detectOpenHandles",
    "test:unit:coverage": "cross-env NODE_ENV=test --coverage --detectOpenHandles",
    "test:e2e": "cross-env NODE_ENV=test start-server-and-test prod 5001 test:coverage",
    "prod": "node build_server/server/server.js",
    "build2": "./node_modules/.bin/tsc --project tsconfig.prod.json",
    "build": "./node_modules/.bin/tsc --project tsconfig.json",
    "test": "snyk test"
  },
  "jest": {
    "testTimeout": 10000,
    "testEnvironment": "node",
    "globalSetup": "./test/jest.setup.ts",
    "globalTeardown": "./test/jest.teardown.ts",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "lines": 95,
        "functions": 95
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "0.0.16",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/csurf": "^1.11.1",
    "@types/express-session": "^1.17.3",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node-fetch": "^2.5.8",
    "@types/node-schedule": "^1.3.1",
    "@types/ratelimiter": "^3.4.1",
    "@types/redis": "^2.8.28",
    "@types/request-ip": "0.0.35",
    "@types/socket.io-redis": "^1.0.27",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "sequelize-cli": "^6.2.0",
    "snyk": "^1.664.0",
    "start-server-and-test": "^1.12.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bufferutil": "^4.0.3",
    "chalk": "^4.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^5.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0",
    "node-schedule": "^2.0.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.5.5",
    "rate-limiter-flexible": "^2.2.2",
    "redis": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "sequelize": "^6.6.2",
    "sequelize-typescript": "^2.1.0",
    "socket.io": "^4.0.2",
    "socket.io-redis": "^6.1.0",
    "umzug": "^3.0.0-beta.15",
    "utf-8-validate": "^5.0.5",
    "uuid": "^8.3.2"
  }
}
